{
    "extends": "expo-module-scripts/tsconfig.plugin",
    "compilerOptions": {
        "outDir": "./build",
        "target": "es6",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "./src",
        "src/**/*"
    ],
    "exclude": [
        "**/__mocks__/*",
        "**/__tests__/*"
    ]
}